---
import RadioButton from "./RadioButton.astro";
import { Image } from "astro:assets";
import dankort from "../../assets/images/form/dankort.png";
import visa from "../../assets/images/form/visa.png";
import mastercard from "../../assets/images/form/mastercard.png";
import mobilepay from "../../assets/images/form/mobilepay.png";
---

<div id="paymentMethod_container">
  <div class="labels">
    <label class="text-form-label-semibold">Betalingsformer</label>
    <label class="text-form-label-semibold required">*</label>
  </div>
  <div id="paymentMethods">
    <div class="MobilePay paymentType">
      <RadioButton label="MobilePay" radioGroup="PaymentInfo" />
      <Image src={mobilepay} alt="mobilepay logo" />
    </div>
    <div class="Card paymentType">
      <RadioButton label="Betalingskort" radioGroup="PaymentInfo" />
      <div class="methods">
        <Image src={dankort} alt="dankort logo" />
        <Image src={visa} alt="visa logo" />
        <Image src={mastercard} alt="mastercard logo" />
      </div>
    </div>
  </div>
</div>

<style>
  #paymentMethod_container {
    display: flex;
    flex-direction: column;
    gap: 4px;
    width: 100%;
  }
  #paymentMethods {
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: 100%;
  }
  .text-form-label-semibold {
    color: var(--color-text-gray900);
  }

  .required {
    color: var(--color-text-red500);
  }

  .paymentType {
    display: flex;
    justify-content: space-between;
  }

  .methods {
    display: flex;
    gap: 3px;
  }

  img {
    height: 25px;
  }
</style>
