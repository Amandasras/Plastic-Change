<div class="amountPickerContainer">
  <input type="radio" name="radioInputField" id="radioButton50" class="radioInput" />
  <label for="radioButton50" class="radioLabel text-form-label-semibold"> 50 kr.</label>
  <input type="radio" name="radioInputField" id="radioButton75" class="radioInput" />
  <label for="radioButton75" class="radioLabel text-form-label-semibold"> 75 kr.</label>
  <input type="radio" name="radioInputField" id="radioButton125" class="radioInput" />
  <label for="radioButton125" class="radioLabel text-form-label-semibold"> 125 kr.</label>
</div>

<style>
  .amountPickerContainer {
    display: inline-flex;
    justify-content: space-between;
    width: 320px;
  }
  .radioLabel {
    color: var(--color-text-gray500);
    background-color: var(--color-surface-white);
    width: 88px;
    height: 88px;
    border-radius: 50%;
    border: 1px solid var(--color-stroke-gray300);
    box-sizing: border-box;

    display: flex;
    justify-content: center;
    align-items: center;

    cursor: pointer;
    transition: background 0.1s;
  }
  /* Skjuler default radiobutton */
  .radioInput {
    display: none;
  }

  .radioInput:checked + .radioLabel {
    border: var(--color-stroke-red500);
    background-color: var(--color-surface-red500);
    color: var(--color-text-white);
  }
</style>

