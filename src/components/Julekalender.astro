<style>
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  .calendar {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  .calendar-collum1,
  .calendar-collum2,
  .calendar-collum3,
  .calendar-collum4,
  .calendar-collum5 {
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 10px;
    gap: 10px;
  }
  .door {
    width: max-content;
    height: max-content;
    background-color: #e4e4e4;
    cursor: pointer;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .door img {
    max-width: max-content;
    max-height: max-content;
    object-fit: contain;
  }
</style>
