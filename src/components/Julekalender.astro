<style>
  section {
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
  }

  .calendar {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  .calendar-collum1,
  .calendar-collum2,
  .calendar-collum3,
  .calendar-collum4,
  .calendar-collum5 {
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 10px;
    gap: 10px;
  }
  .calendar-collum1 :hover,
  .calendar-collum2 :hover,
  .calendar-collum3 :hover,
  .calendar-collum4 :hover,
  .calendar-collum5 :hover {
    animation: var(--animation-pulse);
    background-color: transparent;
  }
  .door {
    width: max-content;
    height: max-content;
    cursor: pointer;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .door img {
    max-width: max-content;
    max-height: max-content;
    object-fit: contain;
